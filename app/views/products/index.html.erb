

<div class="container-fluid">
  <h3>Browse Products </h3>


  <div class="card-deck">
    <% @products.each do |product| %>
    <div class="card w-50">
      <a href="/products/<%= product.id %>"><img class="card-img-top" src="<%= url_for(product.image) %>" alt="Card image cap"></a>
      <div class="card-body">
        <h5 class="card-title"><a href="/products/<%= product.id %>"><%= product.name %></a> - <%= number_to_currency(product.price / 100.0 ) %></h5>
        <p class="card-text"><%= product.description %> </p>
        <p class="card-text"><small class="text-muted">Seller: <%= product.user.username %></small></p>
      </div>
    </div>
    <% end %>
  </div>
</div>

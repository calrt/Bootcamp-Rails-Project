<!DOCTYPE html>
    <head>
    <link rel="stylesheet" href="/style_4.css">

    <section class="header10 cid-qz2XMZSPXo mbr-fullscreen mbr-parallax-background" id="header10-8q" data-rv-view="3271" data-jarallax-original-styles="null" style="z-index: 0; position: relative; background-image: none; background-attachment: scroll; background-size: auto;">
    </head>
    <body>    

        <div class="mbr-overlay" style="opacity: 0.3; background-color: rgb(204, 204, 204);">
        </div>

        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="mbr-white col-md-12 col-lg-10">
                    <span class="cursereffect">
                        <h1 class="typewriter"> 
                        Welcome to <span class="headercolor">Pet Space!</span>
                        </h1>
                    </span>
                    
                    <p class="mbr-section-text mbr-fonts-style align-center display-5">
                        One stop destination for your pets.
                    </p>
                    
                </div>
            </div>
        </div>
            
        <div id="jarallax-container-0" style="position: absolute; top: 0px; left: 0px; width: 100%; height: 100%; overflow: hidden; pointer-events: none; visibility: hidden; z-index: -100;">

        <div style="background-position: 50% 50%; background-size: cover; background-repeat: no-repeat; background-image: url('/bg.png'); position: fixed; bottom: 0px; left: 0px; width: 100%; height: 100%; overflow: hidden; pointer-events: none; margin-left: 0px; margin-top: -110.25px; visibility: visible; transform: translate3d(0px, 0px, 0px);">
            
        </div></div>
        </section>

        <section class="cid-qz2YaO6x06" id="content7-8s" data-rv-view="3274">

            

            
            <div class="container-fluid">
                <div class="row justify-content-center">
                    <div class="col-12 col-lg-6 col-md-8 align-center">
                        <h2 class="mbr-section-title align-center mbr-fonts-style mbr-bold display-2">Let's Shop</h2>
                    </div>
                </div>
            </div>
        </section>

        <section class="mbr-gallery cid-qz2Y6J2MmE" once="shops" id="shop2-8r" data-rv-view="3277">

            
        <div class="mbr-shop">
        <div class="row col-md-12">
            <div class="wrapper-shop-items col-md-12">
                <div class="mbr-gallery-row">
                    <div class="shop-items">
                    <% @products.each do |product| %>
                        <% if product.stock > 0 %>
                        <div class="mbr-gallery-item" onclick="location.href='/products/<%= product.id %>'">
                            <div class="galleryItem">
                                <div class="img_wrapper"><img height="300" alt="No image" src="<%=url_for(product.image)%>"></div>
                                <div class="sidebar_wraper">
                                    <h4 class="item-title mbr-fonts-style mbr-text display-5"><%= product.name %></h4>
                                    <div class="price-block">

                                    <span class="shop-item-price mbr-fonts-style display-5"><%= number_to_currency(product.price / 100.0 ) %></span>
                                    </div>
                                    <div class="price-block">
                                    <span class="display-6  seller-block">
                                        Seller : <%= product.user.username %>
                                    </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% end %>
                    <% end %>
                    </div>
                </div>
            </div>
        </div>
        </div>

        </section>
    </body>
</html>

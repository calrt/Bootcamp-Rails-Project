<h1 class="new-text">Update <%= @product.name %></h1>
<%= render 'form', product: @product %>
<p class="new-text"><%= link_to 'Back', product_path %></p>
<% if current_user == @product.user %>
<p class="new-text"><%= link_to 'Delete', @product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% end %>
